<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.bookstore.domain.HotBook">
		<id name="hotBook" type="java.lang.Long" length="10">
			<generator class="increment"></generator>
		</id>
		
		<property name="bname" type="java.lang.String" length="20"></property>
		<property name="bprice" length="5"></property>
	
	<many-to-one name="bid" class="com.bookstore.domain.Book" column="bid"></many-to-one>
		
	</class>
</hibernate-mapping>